\mode<presentation>

% http://tex.stackexchange.com/questions/146529/design-a-custom-beamer-theme-from-scratch/146682#146682

% Requirement
\RequirePackage{tikz}
\usetikzlibrary{calc,positioning, backgrounds, intersections, fit}

\newif\ifbeamer@framenumber
\beamer@framenumberfalse
\DeclareOptionBeamer{framenumber}{\beamer@framenumbertrue}

\newif\ifbeamer@totalframenumber
\beamer@totalframenumberfalse
\DeclareOptionBeamer{totalframenumber}{\beamer@totalframenumbertrue}

\ProcessOptionsBeamer


% Settings
\usecolortheme{BristolUniversity}
\usefonttheme{BristolUniversity}
\useinnertheme{BristolUniversity}
\useoutertheme{BristolUniversity}

\setbeamersize{text margin left=7mm,text margin right=7mm} 
\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{blocks}[rounded][shadow=true]  

\mode<all>
